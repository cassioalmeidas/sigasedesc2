<div class="border-bottom mb-4 d-flex justify-content-between align-items-center">
  <h1>Serviços</h1>
  <%= link_to new_servico_path, class: 'btn btn-success' do %>
    <%= icon 'fas', 'plus-square'  %> Cadastrar serviço
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% if @servicos.any? %>
        <% @servicos.each do |servico| %>
          <tr>
            <td><%= link_to servico.nome, servico, remote: true  %></td>
            <td>
              <%= icon 'fas', 'edit'  %>
              <%= link_to 'editar', edit_servico_path(servico) %> |
              <%= icon 'fas', 'trash'  %> 
              <%= link_to 'remover', servico, method: :delete, data: { confirm_swal: 'Você tem certeza?' }, class: 'text-danger' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2" class="text-center">Sem registros.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
</div>