<div class="border-bottom mb-4 d-flex justify-content-between align-items-center">
  <h1>Serviços</h1>
  <%= link_to new_servico_path, class: 'btn btn-success' do %>
    <%= fa_icon 'plus-square'  %> Cadastrar serviço
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @servicos.each do |servico| %>
        <tr>
          <td><%= link_to servico.nome, servico %></td>
          <td>
            <%= link_to(fa_icon('edit', text: 'editar'), edit_servico_path(servico)) %>
            <%= link_to(fa_icon('trash', text: 'remover'), servico, method: :delete, data: { confirm_swal: 'Você tem certeza?' }, class: 'text-danger') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


