<%= simple_form_for(servico) do |f| %>
  <%= f.error_notification %>
  <%= f.input :nome, wrapper_html: { class: 'mb-3' } %>
  <%= f.input :descricao, wrapper_html: { class: 'mb-3' } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Cancelar e voltar', servicos_path, class: 'btn btn-secondary' %>
<% end %>
