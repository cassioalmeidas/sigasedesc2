<% unless flash.empty? %>
   <script type="text/javascript">
    <% flash.each do |f| %>
      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
        sweetalert.fire({
          position: 'top-end',
          icon: 'success',
          title: '<%= f[1] %>',
          showConfirmButton: false,
          timer: 1500
        });
    <% end %>
   </script>
<% end %>