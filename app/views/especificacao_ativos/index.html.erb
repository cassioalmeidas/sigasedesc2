<div class="border-bottom mb-4 d-flex justify-content-between align-items-center">
  <h1>Especificações dos ativos</h1>
  <%= link_to new_especificacao_ativo_path, class: 'btn btn-success' do %>
    <%= icon 'fas', 'plus-square'  %> Cadastrar especificação
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @especificacao_ativos.each do |especificacao_ativo| %>
        <tr>
          <td><%= link_to especificacao_ativo.nome, especificacao_ativo  %></td>
          <td>
            <%= icon 'fas', 'edit'  %>
            <%= link_to 'editar', edit_especificacao_ativo_path(especificacao_ativo) %> |
            <%= icon 'fas', 'trash'  %>
            <%= link_to 'remover', especificacao_ativo, method: :delete, data: { confirm_swal: 'Você tem certeza?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
