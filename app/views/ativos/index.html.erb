<div class="border-bottom mb-4 d-flex justify-content-between align-items-center">
  <h1>Ativos</h1>
  <%= link_to new_ativo_path, class: 'btn btn-success' do %>
    <%= icon 'fas', 'plus-square'  %> Cadastrar ativo
  <% end %>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Número patrimonial</th>
        <th>Unidade</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @ativos.each do |ativo| %>
        <tr>
          <td><%= link_to ativo.nome, ativo, remote: true %></td>
          <td><%= ativo.numero_patrimonial.present? ? ativo.numero_patrimonial : "Sem número" %></td>
          <td><%= ativo.unidade.present? ? ativo.unidade : "Sem unidade" %></td>
          <td>
            <%= icon 'fas', 'edit'  %>
            <%= link_to 'editar', edit_ativo_path(ativo) %>
            <%= icon 'fas', 'trash'  %>
            <%= link_to 'remover', ativo, method: :delete, data: { confirm_swal: 'Você tem certeza?' }, class: "text-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
